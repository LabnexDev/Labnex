{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "dist",
    "rootDir": "../",
    "baseUrl": "./",
    "paths": {
      "@labnex/cli/*": ["../cli/src/*"],
      "../cli/src/*": ["../cli/src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "composite": true
  },
  "include": ["src", "../cli/src/**/*"],
  "exclude": [
    "../cli/src/**/*.test.ts",
    "../cli/src/**/*.spec.ts"
  ]
} 